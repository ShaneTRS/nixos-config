{
    "nix.enableLanguageServer": true,
    "nix.serverPath": "nil",
    "nix.serverSettings": {
        "nil": {
            "formatting": {
                "command": [
                    "nixfmt",
                    "-w120"
                ]
            }
        }
    },
    "editor.formatOnSave": true,
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "task.problemMatchers.neverPrompt": {
        "shell": true
    },
}