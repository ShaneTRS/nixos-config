{
  "type": "object",
  "$defs": {
    "profiles": {
      "type": "string",
      "enum": [
        "crumb",
        "dionysus",
        "lachesis",
        "saturn",
        "solis"
      ]
    },
    "serials": {
      "type": "string",
      "enum": [
        "0",
        "MOELITEBOOK",
        "MXL0265298",
        "PDXVT001X6J2P5"
      ]
    },
    "required": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "hostname",
          "serial",
          "source",
          "user"
        ]
      }
    }
  },
  "properties": {
    "$schema": {
      "type": "string"
    },
    "hostname": {
      "type": "string",
      "minLength": 1,
      "description": "System hostname - also used as the default system profile"
    },
    "profile": {
      "oneOf": [
        {
          "$ref": "#/$defs/profiles"
        }
      ],
      "description": "System profile - required when hostname is not a valid profile"
    },
    "serial": {
      "oneOf": [
        {
          "$ref": "#/$defs/serials"
        }
      ],
      "description": "System serial number - selects relevant hardware config"
    },
    "source": {
      "type": "string",
      "pattern": "^/.+/$",
      "description": "Absolute path to the flake's source directory"
    },
    "user": {
      "type": "string",
      "minLength": 1,
      "description": "Name of the primary user"
    }
  },
  "if": {
    "properties": {
      "hostname": {
        "not": {
          "$ref": "#/$defs/profiles"
        }
      }
    }
  },
  "then": {
    "allOf": [
      {
        "required": [
          "profile"
        ]
      },
      {
        "required": {
          "$ref": "#/$defs/required"
        }
      }
    ]
  },
  "else": {
    "required": {
      "$ref": "#/$defs/required"
    }
  },
  "additionalProperties": false
}
